{
  "name": "listali-server",
  "version": "1.0.0",
  "description": "Backend server for Smart Group Shopping app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "nodemon --exec tsx src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "shopping",
    "group",
    "real-time",
    "express",
    "socket.io"
  ],
  "author": "Destaw-dev",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.2.0",
    "googleapis": "^154.1.0",
    "helmet": "^7.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "limit": "^0.0.1",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.11",
    "puppeteer": "^24.14.0",
    "resend": "^4.7.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.4",
    "supertest": "^7.1.3",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^30.0.4",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "engines": {
    "node": "20.x"
  }
}
